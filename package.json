{
  "name": "digitaltwin-pwa",
  "version": "1.0.0",
  "description": "Digital Twin SVG IDE with PWA, Collaboration, and i18n",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose", 
    "test:e2e": "node tests/e2e-runner.js",
    "test:docker": "npm run test:headless && npm run test:lighthouse && npm run test:accessibility",
    "test:headless": "node tests/puppeteer-tests.js",
    "test:lighthouse": "node tests/lighthouse-tests.js",
    "test:accessibility": "node tests/accessibility-tests.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node tests/performance-tests.js",
    "test:pwa": "node tests/pwa-tests.js",
    "test:collaboration": "node tests/collaboration-tests.js",
    "test:i18n": "node tests/i18n-tests.js",
    "build": "npm run build:sw && npm run build:static",
    "build:sw": "node build/generate-sw.js",
    "build:static": "node build/optimize-static.js",
    "lint": "eslint js/**/*.js tests/**/*.js",
    "format": "prettier --write '**/*.{js,json,md}'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:test": "docker-compose run test-runner",
    "docker:down": "docker-compose down",
    "deploy": "npm run build && npm run docker:build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "ws": "^8.14.2",
    "simple-peer": "^9.11.1",
    "workbox-webpack-plugin": "^7.0.0",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "puppeteer": "^21.3.6",
    "playwright": "^1.38.1",
    "lighthouse": "^11.1.0",
    "axe-core": "^4.8.2",
    "@testing-library/jest-dom": "^6.1.4",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/vendor/**",
      "!js/test-*.js"
    ],
    "coverageDirectory": "test-results/coverage",
    "coverageReporters": ["html", "text", "lcov"]
  }
}
